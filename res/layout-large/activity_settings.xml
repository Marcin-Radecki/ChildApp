<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_wallpaper"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingsActivity" >

    <TextView
        android:id="@+id/textViewSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seekBarControlSound"
        android:layout_alignLeft="@+id/seekBarControlSound"
        android:layout_marginBottom="39dp"
        android:text="@string/SoundControl"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonSpanish"
        android:layout_alignTop="@+id/buttonSpanish"
        android:layout_toRightOf="@+id/buttonSpanish"
        android:background="@drawable/england_flag" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/backbutton" />

    <Button
        android:id="@+id/buttonSpanish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewLanguages"
        android:layout_below="@+id/textViewLanguages"
        android:background="@drawable/spain_flag" />

    <SeekBar
        android:id="@+id/seekBarControlSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/backButton"
        android:layout_marginTop="244dp" />

    <TextView
        android:id="@+id/textViewLanguages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekBarControlSound"
        android:layout_below="@+id/textViewSound"
        android:layout_marginTop="70dp"
        android:text="@string/Languages"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp"
        android:textStyle="bold" />

</RelativeLayout>